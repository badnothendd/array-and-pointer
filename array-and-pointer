#include <stdio.h>
#include <stdlib.h>

  //pointerlı kullanım:

     int max(int *a, int uzunluk) {
      	
      	int maks= a[0];
      	
      	int i;
      	
      	 for(i=1; i<uzunluk; i++) {
		   
      	  if (a[i] > maks) {
      	  	
      	  	maks= a[i];
			}
	  }
         return maks;
     }

   int main() {
	
	  int sayilar[5]= {1,4,7,98,9};
	  
	  int maks= max(sayilar,5);
	  
	  printf("dizinin maks. elemani %d dir.", maks);
	
	

	
	return 0;
}
      
      
